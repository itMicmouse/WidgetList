<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.micmource.lib_bluetooth_printer.BluetoothPrinterActivity">

    <Button
        android:id="@+id/activity_open_bluetooth"
        android:layout_width="wrap_content"
        android:text="打开蓝牙"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_scan_bluetooth"
        android:layout_width="wrap_content"
        android:text="开放检测"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_find_bluetooth"
        android:layout_width="wrap_content"
        android:text="扫描蓝牙"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_create_bluetooth"
        android:layout_width="wrap_content"
        android:text="创建蓝牙服务"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/bluetooth_device_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
